        <Window x:Class="BarcodeCompareSystem.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcodeCompareSystem"
        mc:Ignorable="d"
        Title="LoginForm" Height="300" Width="300" FontSize="14" Background="#fafafa">
    <Border Background="#fafafa" CornerRadius="20" Margin="20">
            <StackPanel Margin="20">
                <Label Content="Login" FontSize="25" HorizontalAlignment="Center"/>
            <Label Content="Username" Foreground="Black"/>
            <TextBox Name="txtUsername" Background="White" Foreground="Black" FontSize="14" AcceptsReturn="True"/>
            <Label Content="Password" Foreground="Black"/>
            <PasswordBox PasswordChar="*" Name="txtPassword" Background="White" Foreground="Black" FontSize="14" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnSubmit" Content="Login"  Width="60" Margin="10" Click="btnReprint_Click"/>
                <Button Name="btnCancel" Content="Cancel" Width="60" Margin="10" Click="btnCancel_Click"/>
            </StackPanel>
         </StackPanel>
        </Border>
</Window>
